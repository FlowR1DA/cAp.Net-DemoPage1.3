@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav bg-dark rounded shadow">

@if (SignInManager.IsSignedIn(User))

{
    <li class="nav-item">
        <a  class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hallo&nbsp; <strong>@User.Identity?.Name</strong></a>
    </li>

    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-white">Abmelden</button>
        </form>
    </li>
}

else

{
    <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register" style="color:darkorange">Registrieren</a>
    </li>

    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login"><strong>Anmelden</strong></a>
    </li>
}
</ul>